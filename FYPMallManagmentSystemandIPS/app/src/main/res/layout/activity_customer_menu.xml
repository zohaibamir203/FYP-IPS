<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context=".CustomerMenu">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLocateMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="270dp"
        android:backgroundTint="@color/btnYellow"
        android:text="@string/customer_menu_locateMe"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSalesAlert"
        android:layout_width="match_parent"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btnYellow"
        app:layout_constraintTop_toBottomOf="@+id/btnLocateMe"
        android:text="@string/customer_menu_salesAlert"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/btnYellow"
        android:text="@string/customer_menu_categories"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnSalesAlert"
        tools:layout_editor_absoluteX="120dp" />


</androidx.constraintlayout.widget.ConstraintLayout>