<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopkeeperMenu"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtShopkeeperName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Welcome Back"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtShopkeeperName"
        android:backgroundTint="@color/yellow"
        android:text="@string/chngName"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        android:textColor="@color/white"
        app:cornerRadius="30dp"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:icon="@drawable/changename"
        app:iconSize="30dp"
        app:iconTint="@color/white"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageSales"
        android:layout_width="match_parent"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeName"
        android:text="@string/mngSales"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:cornerRadius="30dp"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:icon="@drawable/managesales"
        app:iconSize="30dp"
        app:iconTint="@color/white"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/chngCategory"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnManageSales"
        tools:layout_editor_absoluteX="120dp"
        android:textColor="@color/white"
        app:cornerRadius="30dp"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:icon="@drawable/categories"
        app:iconSize="30dp"
        app:iconTint="@color/white"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShopkeeperSignOut"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/green"
        android:text="@string/signOut"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeCategories"
        app:icon="@drawable/signout"
        app:iconSize="25dp"
        app:iconTint="@color/white"
        app:iconGravity="textStart"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/shopkeeperMenu"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnShopkeeperSignOut"
        app:layout_constraintEnd_toEndOf="@+id/btnChangeCategories"
        app:layout_constraintStart_toStartOf="@+id/btnChangeCategories"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeCategories"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/shopkeepermenu"/>

</androidx.constraintlayout.widget.ConstraintLayout>